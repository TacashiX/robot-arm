<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Robot Console Output</title>
</head>
<body>
    <h1>Robot Console Output</h1>
    <pre id="console-output"></pre>

    <script>
        const eventSource = new EventSource('/logs');
        eventSource.onmessage = function(event) {
            const pre = document.getElementById('console-output');
            pre.innerHTML += event.data + "\n";
            pre.scrollTop = pre.scrollHeight;  // Auto-scroll to the bottom
        };
    </script>
</body>
</html>

